.login {
  width: 100%;
  height: 100%;
  background: url(../../assets/images/bg.jpg);
  background-image: linear-gradient(to right, #48D1CC, #6495ED);
  background-size: 100% 100%;
}
.login .login-header {
  height: 80px;
  background-image: linear-gradient(to right, #698B69, #104E8B);
  display: flex;
  align-items: center;
}
.login .login-header img {
  width: 40px;
  height: 40px;
  margin-left: 64px;
}
.login .login-header h1 {
  font-size: 24px;
  color: #fff;
}
.login .login-content {
  width: 400px;
  height: 300px;
  margin: 100px auto;
  background-color: #fff;
  padding: 0 42px;
}
.login .login-content h1 {
  font-size: 24px;
  padding-top: 20px;
  text-align: center;
}
.login .login-content .login-form {
  margin-top: 30px;
}
.login .login-content .login-form .login-form-button {
  width: 100%;
}
